{
  "manifest_version": 2,
  "name": "Draw Page",
  "description": "Lets you take notes on the web page.",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": {
      "16": "images/draw-16.png",
      "32": "images/draw-32.png"
    },
    "default_title": "Draw Page",
    "default_popup": "/popup/html/highlight-popup.html"
  },
  "background": {
    "scripts": [
      "background.js",
      "captureAPI.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "css": [
        "content-scripts/css/canvas-draw.css"
      ],
      "js": [
        "/node_modules/merge-images/dist/index.umd.js",
        "content-scripts/js/canvas-draw.js"
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "pageCapture",
    "<all_urls>",
    "storage"
  ],
  "web_accessible_resources": [
    "images/*.png",
    "content-scripts/css/*.css",
    "content-scripts/js/*.js",
    "content-scripts/html/*.html",
    "content-scripts/fonts/*.*"
  ]
}

{
  "manifest_version": 2,
  "name": "Web Page Highlighter",
  "description": "Lets you take notes on the web page.",
  // "default_locale": "en",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": {
      "16": "images/draw-16.png",
      "32": "images/draw-32.png"
    },
    "default_title": "Highlight Page"
  },
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "images/*.png",
    "content-scripts/css/*.css",
    "content-scripts/html/highlight.html",
    "content-scripts/js/*.js",
    "content-scripts/fonts/*.*"
  ]
}

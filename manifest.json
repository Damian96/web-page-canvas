{
  "manifest_version": 2,
  "name": "Web Page Annotator",
  "description": "Lets you take notes on the web page.",
  "version": "0.0.5",
  "browser_action": {
    "default_icon": {
      "16": "images/draw-16.png",
      "32": "images/draw-32.png"
    },
    "default_title": "Annotate Page",
    "default_popup": "/popup/html/web-page-annotator-popup.html"
  },
  "background": {
    "scripts": [
      "background/background.js",
      "background/captureAPI.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "css": [
        "content-scripts/css/web-page-annotator.min.css"
      ],
      "js": [
        "content-scripts/js/web-page-annotator.min.js"
      ]
    }
  ],
  "permissions": [
    "pageCapture",
    "<all_urls>",
    "tabs",
    "activeTab",
    "storage",
    "unlimitedStorage"
  ],
  "web_accessible_resources": [
    "images/*.png",
    "content-scripts/css/*.css",
    "content-scripts/js/*.js",
    "content-scripts/html/*.html",
    "content-scripts/fonts/*.*"
  ]
}

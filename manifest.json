{
  "manifest_version": 2,
  "name": "Web Page Highlighter",
  "description": "Displays a sidebar that lets you take notes on web pages.",
  "version": "1.0",
  "applications": {
    "gecko": {
      "strict_min_version": "54.0a1"
    }
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "16": "icons/draw-16.png",
      "32": "icons/draw-32.png"
    },
    "default_title": "Highlight Page"
  },

  // "content_scripts": [
  //   {
  //     "matches": ["*://*/*"],
  //     "exclude_matches": ["*://www.google.*/search?*"],
  //     "js": ["content-scripts/js/highlight.min.js"],
  //     "css": ["content-scripts/css/highlight.min.css"],
  //     "run_at": "document_end"
  //   }
  // ],

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": ["activeTab", "<all_urls>"],

  "web_accessible_resources": [
    "icons/highlighter-16.png",
    "icons/highlighter-32.png",
    "icons/highlighter-32_yellow.png",
    "icons/eraser-16.png",
    "icons/eraser-32.png",
    "icons/eraser-32_red.png"
  ],

  "commands": {
    "_execute_sidebar_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      }
    }
  }

}
